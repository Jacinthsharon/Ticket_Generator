<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>SiteName</h2>
            <button id="sidebar-close" class="sidebar-close">
                <span class="material-icons">close</span>
            </button>
        </div>
        <ul>
            <li><a href="/admin">Dashboard</a></li>
            <li><a href="/create">Users</a></li>
            <li><a href="/login">Logout</a></li>
        </ul>
        <div class="user-profile">
            <img src="profile.jpg" alt="Profile Picture" class="profile-pic">
            <div class="user-info">
                <p class="user-name" id="adminName"></p>
                <p class="user-id" id="adminId"></p>
            </div>
        </div>        
    </div>

    <div class="main-content">
        <div class="header">
            <button id="sidebar-toggle" class="sidebar-toggle">
                <span class="material-icons">menu</span>
            </button>
            <h1>Create User</h1>
            <div class="icons">
                <div id="notification-icon" class="icon">
                    <i class="material-icons">notifications</i>
                </div>             
            </div>
        </div>

        <div class="table-controls">
            <input type="text" id="search-input" placeholder="Search users...">
            <button id="add-task-btn">Create User</button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Emp_Id</th>
                    <th>Name</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((create, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= create.emp_id %></td>
                        <td><%= create.name %></td>
                        <td><%= create.password %></td>
                    </tr>
                <% }); %>
            </tbody>
                        
        </table>
    </div>

    <div id="popup-form" class="popup-form">
        <div class="popup-content">
            <span id="close-popup" class="close-btn">&times;</span>
            <h2>Create User</h2>
            <form id="task-form">
                <input type="text" id="emp_id" placeholder="Employee ID">
                <input type="text" id="name" placeholder="Name">
                <input type="password" id="password" placeholder="Password">
                <button type="submit">Submit</button>
            </form>
            
        </div>
    </div>

    <script src="/js/create.js"></script>
    <script src="/js/script.js"></script>

</body>
</html>
