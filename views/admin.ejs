<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>SiteName</h2>
            <button id="sidebar-close" class="sidebar-close">
                <span class="material-icons">close</span>
            </button>
        </div>
        <ul>
            <li><a href="/admin">Dashboard</a> </li>
            <li><a href="/create">Users</a></li>
            <li><a href="/login">Logout</a></li>
        </ul>
        
        <div class="user-info">
            <p class="user-name" id="adminName" style="margin-top: 320px; text-align: center; font-size: 18px; color: #ffffff;"></p>
            <p class="user-id" id="adminId" style="text-align: center; font-size: 18px; color: #ffffff;"></p>
        </div>
    </div>

    <div class="main-content">
        <div class="header">
            <button id="sidebar-toggle" class="sidebar-toggle">
                <span class="material-icons">menu</span>
            </button>
            <h1>Admin Dashboard</h1>
            <div class="icons">
                <div id="notification-icon" class="icon">
                    <i class="material-icons">notifications</i>
                </div>
            </div>
        </div>

        <div class="cards">
            <div class="card">Card 1</div>
            <div class="card">Card 2</div>
            <div class="card">Card 3</div>
            <div class="card">Card 4</div>
        </div>

        <div class="table-controls">
            <input type="text" id="search-input" placeholder="Search tasks...">
            <button id="add-task-btn">Assign Task</button>
        </div>

        <table id="task-table">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Emp_Id</th>
                    <th>Name</th>
                    <th>Work</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="task-table-body">
                
            </tbody>
                        
        </table>
    </div>

    <div id="task-popup-form" class="popup-form">
        <div class="popup-content">
            <span id="close-task-popup" class="close-btn">&times;</span>
            <h2 style="color: #3d78e3;">Assign Task</h2>
            <form id="task-form">
                <label for="task-emp-id">Employee ID</label>
                <select id="task-emp-id" required>
                    <option value="">Select Employee ID</option>
                    <option value="001">001</option>
                    <option value="002">002</option>
                    <option value="003">003</option>
                    <option value="004">004</option>
                    <option value="005">005</option>
                </select>
    
                <label for="task-name">Name</label>
                <select id="task-name" required>
                    <option value="">Select Name</option>
                    <option value="AAA">AAA</option>
                    <option value="BBB">BBB</option>
                    <option value="CCC">CCC</option>
                    <option value="DDD">DDD</option>
                    <option value="EEE">EEE</option>
                </select>
    
                <label for="task-work">Work</label>
                <select id="task-work" required>
                    <option value="">Select Work</option>
                    <option value="Documentation">Documentation</option>
                    <option value="Development">Development</option>
                    <option value="Testing">Testing</option>
                    <option value="Design">Design</option>
                    <option value="Deployment">Deployment</option>
                </select>
    
                <label for="task-date">Date</label>
                <input type="date" id="task-date" required>

                <label for="task-priority">Priority</label>
                <select id="task-priority" required>
                    <option value="">Select Priority</option>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>    
    
                <button type="submit">Add Task</button>
            </form>
        </div>
    </div>
            
    <script>
        document.addEventListener("DOMContentLoaded", () => {
    const adminInfoString = localStorage.getItem("adminInfo");

    if (!adminInfoString || adminInfoString === "undefined") {
        console.warn("User info not found or invalid!");
        return;
    }

    try {
        const adminInfo = JSON.parse(adminInfoString);
        if (adminInfo.name && adminInfo.emp_id) {
            document.getElementById("adminName").textContent = `Name: ${adminInfo.name}`;
            document.getElementById("adminId").textContent = `Emp ID: ${adminInfo.emp_id}`;
        } else {
            console.warn("Incomplete user data");
            localStorage.removeItem("adminInfo");
        }
    } catch (error) {
        console.error("Error parsing adminInfo:", error);
        localStorage.removeItem("adminInfo");
    }
});     
    </script>
    <script src="/js/script.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>
