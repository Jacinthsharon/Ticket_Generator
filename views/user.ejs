<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>SiteName</h2>
            <button id="sidebar-close" class="sidebar-close">
                <span class="material-icons">close</span>
            </button>
        </div>
        <ul>
            <li><a href="/user">Dashboard</a></li>
            <li><a href="/login">Logout</a></li>
        </ul>
        <div class="user-info">
            <p class="user-name" id="userName" style="margin-top: 380px; text-align: center; font-size: 18px; color:#ffffff"></p>
            <p class="user-id" id="userId" style="text-align: center; font-size: 18px; color: #ffffff;"></p>
        </div>
        
    </div>

    <div class="main-content">
        <div class="header">
            <button id="sidebar-toggle" class="sidebar-toggle">
                <span class="material-icons">menu</span>
            </button>
            <h1>User Dashboard</h1>
            <div class="icons">
                <div id="notification-icon" class="icon">
                    <i class="material-icons">notifications</i>
                </div>
            </div>
        </div>

        <div class="table-controls">
            <button id="task-report-btn">Task Report</button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Work</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="table-body">
                <!-- Rows will be dynamically added -->
            </tbody>
        </table>
    </div>

    <div id="popup-form" class="popup-form">
        <div class="popup-content">
            <span id="close-popup" class="close-btn" style="top: 185px; right: 570px;">&times;</span>
            <h2 style="color: #3d78e3;">Task Report</h2>
            <form id="task-form">
                <label for="emp_id">Emp_id</label>
                <input type="text" id="emp_id" required>

                <label for="work">Work</label>
                <input type="text" id="work" required>
                
                <label for="date">Date</label>
                <input type="date" id="date" required>

                <label for="status">Status</label>
                <select id="status">
                    <option value="Completed">Completed</option>
                    <option value="Pending">Pending</option>
                </select>
                
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>

    <script>
document.addEventListener("DOMContentLoaded", () => {
    console.log("Dashboard script loaded");

    const userInfoString = localStorage.getItem("adminInfo");
    console.log("Retrieved userInfoString:", userInfoString);

    if (!userInfoString || userInfoString === "undefined") {
        console.warn("User info not found or invalid!");
        return;
    }

    try {
        const userInfo = JSON.parse(userInfoString);
        console.log("Parsed userInfo:", userInfo);

        if (userInfo.name && userInfo.emp_id) {
            const userNameElement = document.getElementById("userName");
            const userIdElement = document.getElementById("userId");

            console.log("UserName Element:", userNameElement);
            console.log("UserId Element:", userIdElement);

            if (userNameElement && userIdElement) {
                userNameElement.textContent = `Name: ${userInfo.name}`;
                userIdElement.textContent = `Emp ID: ${userInfo.emp_id}`;
                console.log("User details updated in DOM");
            } else {
                console.error("User elements not found in DOM");
            }
        } else {
            console.warn("Incomplete user data");
            localStorage.removeItem("adminInfo");
        }
    } catch (error) {
        console.error("Error parsing userInfo:", error);
        localStorage.removeItem("adminInfo");
    }
});

    </script>
    <script src="/js/script.js"></script>
    <script src="/js/report.js"></script>
</body>
</html>
